            android:paddingTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الشرح: تُستخدم هذه القاعدة للربط بين جملتين باستخدام تركيبات مزدوجة مثل 'sowohl ... als auch' أو 'weder ... noch'." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الأمثلة:"
